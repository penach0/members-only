<p>
    <% if session[:user_id] %>
        Logged in as <%= User.find(session[:user_id]).username %>
        <%= link_to "Logout", session_path(session.id), data: {
                                                                turbo_method: :delete,
                                                                turbo_confirm: "Are you sure?"
                                                              } %>
    <% else %>
        <%= link_to "Sign in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
    <% end %>
</p>

<h1>All Posts</h1>

<ul>
    <% @posts.each do |post| %>
        <li><%= link_to post.title, post_path(post.id) %>
            <% if session[:user_id] %>
             by <%= User.find(post.user_id)%>
            <% end %>
        </li>
    <% end %>
</ul>

<% if session[:user_id] %>
    <%= link_to "New Post", new_post_path %>
<% end %>
